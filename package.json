{
  "name": "ewiv",
  "displayName": "ewiv",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.48.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:mwRecentChange"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "ewiv",
      "properties": {
        "ewiv.sites": {
          "type": "array",
          "default": [
            {
              "site": "Mooncell",
              "index": "https://fgo.wiki/index.php",
              "api": "https://fgo.wiki/api.php",
              "rcNamespace": "",
              "rcType": "edit|new|external|categorize"
            }
          ]
        }
      }
    },
    "commands": [
      {
        "command": "ewiv.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "ewiv.refresh_recent_change",
        "title": "refresh all recent changes",
        "icon": "$(refresh)"
      },
      {
        "command": "ewiv.refresh_site_recent_change",
        "title":"refresh this site recent changes",
        "icon":"$(refresh)"
      },
      {
        "command": "ewiv.add_site",
        "title": "add site",
        "icon": "$(add)"
      },
      {
        "command": "ewiv.diff_source",
        "title": "diff source",
        "icon": "$(diff)"
      },
      {
        "command": "ewiv.diff_in_browser",
        "title": "open in browser",
        "icon": "$(remote-explorer)"
      },
      {
        "command": "ewiv.open_source",
        "title": "open source"
      },
      {
        "command": "ewiv.init_fs",
        "title": "init fs"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mwHistoryExplorer",
          "title": "history-explorer",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "mwHistoryExplorer": [
        {
          "id": "mwRecentChange",
          "name": "recent change",
          "contextualTitle": "Recent Change"
        },
        {
          "id": "mwPageRevisions",
          "name": "page revisions",
          "contextualTitle": "Page Revision"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "ewiv.refresh_recent_change",
          "group": "navigation",
          "when": "view == mwRecentChange"
        },
        {
          "command": "ewiv.add_site",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "ewiv.refresh_site_recent_change",
          "group": "inline",
          "when": "viewItem == ewiv:rc_site"
        },
        {
          "command": "ewiv.diff_source",
          "group": "inline",
          "when": "viewItem == ewiv:rc_change"
        },
        {
          "command": "ewiv.diff_in_browser",
          "group": "inline",
          "when": "viewItem == ewiv:rc_change"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "fix": "eslint --fix src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@types/vscode": "^1.48.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "prettier": "^2.1.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "axios": "^0.20.0"
  }
}