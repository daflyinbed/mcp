{
  "name": "mcp",
  "displayName": "mcp",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.48.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:mcpRecentChange"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "mcp",
      "properties": {
        "mcp.sites": {
          "type": "array",
          "default": [
            {
              "site": "Mooncell",
              "index": "https://fgo.wiki/index.php",
              "api": "https://fgo.wiki/api.php",
              "rcNamespace": "",
              "rcType": "",
              "name": "",
              "password": ""
            }
          ]
        }
      }
    },
    "commands": [
      {
        "command": "mcp.refresh_recent_change",
        "title": "mcp: refresh all recent changes",
        "icon": "$(refresh)"
      },
      {
        "command": "mcp.refresh_site_recent_change",
        "title": "mcp: refresh this site recent changes",
        "icon": "$(refresh)"
      },
      {
        "command": "mcp.refresh_page_history",
        "title": "mcp: refresh page history",
        "icon": "$(refresh)"
      },
      {
        "command": "mcp.add_site",
        "title": "mcp: add site",
        "icon": "$(add)"
      },
      {
        "command": "mcp.diff_source",
        "title": "mcp: diff source",
        "icon": "$(diff)"
      },
      {
        "command": "mcp.diff_in_browser",
        "title": "mcp: open compare in browser",
        "icon": "$(compare-changes)"
      },
      {
        "command": "mcp.open_in_browser",
        "title": "mcp: open page in browser",
        "icon": "$(remote-explorer)"
      },
      {
        "command": "mcp.open_source",
        "title": "mcp: open source"
      },
      {
        "command": "mcp.edit",
        "title": "mcp: submit change",
        "icon": "$(save)"
      },
      {
        "command": "mcp.login",
        "title": "mcp: login"
      },
      {
        "command": "mcp.discard",
        "title": "mcp: discard",
        "icon": "$(discard)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcpHistoryExplorer",
          "title": "history-explorer",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "mcpHistoryExplorer": [
        {
          "id": "mcpRecentChange",
          "name": "recent change",
          "contextualTitle": "Recent Change"
        },
        {
          "id": "mcpPageRevisions",
          "name": "page revisions",
          "contextualTitle": "Page Revision"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "mcp.refresh_recent_change",
          "group": "navigation",
          "when": "view == mcpRecentChange"
        },
        {
          "command": "mcp.refresh_page_history",
          "group": "navigation",
          "when": "view == mcpPageRevisions"
        }
      ],
      "view/item/context": [
        {
          "command": "mcp.refresh_site_recent_change",
          "group": "inline",
          "when": "viewItem == mcp:rc_site"
        },
        {
          "command": "mcp.diff_source",
          "group": "inline",
          "when": "viewItem == mcp:rc_change"
        },
        {
          "command": "mcp.diff_in_browser",
          "group": "inline",
          "when": "viewItem == mcp:rc_change"
        }
      ],
      "scm/resourceState/context": [
        {
          "command": "mcp.edit",
          "group": "inline",
          "when": "scmProvider == mcp"
        },
        {
          "command": "mcp.discard",
          "group": "inline",
          "when": "scmProvider ==mcp"
        }
      ],
      "editor/title": [
        {
          "command": "mcp.open_in_browser",
          "when": "resourceScheme == mcpFS && !isInDiffEditor",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "fix": "eslint --fix src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@types/vscode": "^1.48.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "prettier": "^2.1.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "@types/tough-cookie": "^4.0.0",
    "got": "^11.6.1",
    "tough-cookie": "^4.0.0"
  }
}